# Private key for deployment (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Base Mainnet RPC URL (optional - will use public endpoint if not set)
BASE_RPC_URL=https://mainnet.base.org

# Base Sepolia Testnet RPC URL (optional - will use public endpoint if not set)
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Basescan API Key (required for contract verification)
# Get your API key from: https://basescan.org/myapikey
BASESCAN_API_KEY=your_basescan_api_key_here

# Gas reporting (optional)
REPORT_GAS=false

# CoinMarketCap API Key (optional - for gas price in USD)
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here
